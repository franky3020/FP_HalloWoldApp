<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.over_task">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="task_manage"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.over_task.ShowChatActivity"
            android:label="聊天列表"
            android:exported="false"/>
<!--        // Todo 多國語言-->

        <activity
            android:name="com.example.over_task.CollectTaskActivity"
            android:label="@string/task"
            android:exported="false"/>

        <activity
            android:name="com.example.over_task.ShowRequestUsersActivity"
            android:label="@string/request_users"
            android:exported="false"/>

        <activity
            android:name="com.example.over_task.HomePageActivity"
            android:label="@string/homePage_toolbar_title"
            android:exported="false"/>
        <activity
            android:name="com.example.over_task.ShowTaskActivity"
            android:label="@string/showTask_toolbar_title"
            android:exported="false"/>

        <activity
            android:name="com.example.over_task.TaskDetailActivity"
            android:label="@string/task_content"
            android:exported="false"/>

        <activity
            android:name="com.example.over_task.MainActivity"
            android:label="@string/main_toolbar_title"
            android:exported="false">

        </activity>
        <activity
            android:name="com.example.over_task.LoginActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.example.over_task.SignUpActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.over_task.ReleaseTaskActivity"
            android:label="@string/releaseTask_toolbar_title"
            android:parentActivityName="com.example.over_task.ShowTaskActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.over_task.ProfileActivity"
            android:label="@string/profile_toolbar_title"
            android:exported="false"/>
        <activity
            android:name="com.example.over_task.ChatActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="ChatPage"
            android:exported="false"/>
        <activity
            android:name="com.example.over_task.SignActivity"
            android:exported="false"/>
    </application>

</manifest>