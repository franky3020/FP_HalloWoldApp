<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.my_first_application">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".HomePageActivity"
            android:label="@string/homePage_toolbar_title"></activity>

        <activity
            android:name=".ShowTaskActivity"
            android:label="@string/showTask_toolbar_title"></activity>

        <activity android:name=".TaskDetailActivity"></activity>

        <activity android:name=".MainActivity"
            android:label="@string/main_toolbar_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/SignTheme"></activity>

        <activity
            android:name=".SignUpActivity"
            android:theme="@style/SignTheme"></activity>

        <activity
            android:name=".ReleaseTaskActivity"
            android:label="@string/releaseTask_toolbar_title"
            android:parentActivityName=".ShowTaskActivity"></activity>

        <activity
            android:name=".ProfileActivity"
            android:label="@string/profile_toolbar_title"></activity>

        <activity
            android:name=".ChatActivity"
            android:label="ChatPage"></activity>

    </application>
</manifest>