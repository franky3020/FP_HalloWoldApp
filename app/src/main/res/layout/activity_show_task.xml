<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowTaskActivity">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="right">

        <Spinner
            android:id="@+id/button_task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dropDownWidth="fill_parent"
            android:entries="@array/task_type_array"
            android:background="@drawable/show_task_spinner"
            android:text="@string/show_task_spinner_type"
            android:layout_marginRight="10dp" />

        <Spinner
            android:id="@+id/button_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/task_region_array"
            android:background="@drawable/show_task_spinner"
            android:text="@string/show_task_spinner_address"
            android:layout_marginRight="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/taskShow"
            android:padding="5dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/activity_show_task_item"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/baseline_add_black_24"
        android:layout_margin="16dp"
        android:onClick="onClickToReleaseTask"
        />
    </RelativeLayout>
</LinearLayout>