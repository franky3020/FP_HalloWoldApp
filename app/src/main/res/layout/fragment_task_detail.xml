<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TaskDetailFragment">

    <TextView
        android:id="@+id/taskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="13dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:text="XXX"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/releaseTask_bg"
        android:layout_weight="18" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="13dp"
            android:background="@color/releaseTask_textContent_bg"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView_releaseUserID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="發布者" />

            <TextView
                android:id="@+id/releaseUserID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="18sp"
                android:text="releaseUserID" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="13dp"
            android:background="@color/releaseTask_textContent_bg"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView_releaseTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="時間" />

            <TextView
                android:id="@+id/releaseTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="18sp"
                android:text="releaseTime" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="13dp"
            android:background="@color/releaseTask_textContent_bg"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="薪水" />

            <TextView
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="18sp"
                android:text="salary" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="13dp"
            android:background="@color/releaseTask_textContent_bg"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView_taskAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="地點" />

            <TextView
                android:id="@+id/taskAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="18sp"
                android:text="taskAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="13dp"
            android:background="@color/releaseTask_textContent_bg"
            android:layout_marginTop="5dp"
            android:layout_weight="13">

            <TextView
                android:id="@+id/textView_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="工作內容" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="message"
                android:layout_weight="13" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>