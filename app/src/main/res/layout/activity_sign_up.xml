<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/login_background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_up_page_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sign_up_page_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <!-- both layout_width/layout_height are wrap_content -->
    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="128dp"
        android:layout_height="94dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/temp_logo"
        app:layout_constraintEnd_toStartOf="@+id/guideline_sign_up_page_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_sign_up_page_left"
        app:layout_constraintTop_toTopOf="parent" /> <!-- 參考教學 : http://androidnotebykenny.blogspot.com/2015/07/android-imageview.html -->

    <EditText
        android:id="@+id/editText_sign_up_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/login_edit_text_background"
        android:drawableStart="@drawable/ic_email_address"
        android:drawablePadding="8dp"
        android:hint="@string/email_address"
        android:textColorHint="@color/login_form_details"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_sign_up_page_right"
        app:layout_constraintStart_toStartOf="@id/guideline_sign_up_page_left"
        app:layout_constraintTop_toBottomOf="@+id/imageView_logo" />

    <!-- Asset 教學 : https://developer.android.com/studio/write/image-asset-studio?hl=zh-cn -->
    <EditText
        android:id="@+id/editText_sign_up_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        android:background="@drawable/login_edit_text_background"
        android:drawableStart="@drawable/ic_lock_password"
        android:drawablePadding="8dp"
        android:hint="@string/password"
        android:textColorHint="@color/login_form_details"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_sign_up_page_right"
        app:layout_constraintStart_toStartOf="@id/guideline_sign_up_page_left"
        app:layout_constraintTop_toBottomOf="@+id/editText_sign_up_username" />

    <EditText
        android:id="@+id/editText_sign_up_password_again"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        android:background="@drawable/login_edit_text_background"
        android:drawableStart="@drawable/ic_lock_password"
        android:drawablePadding="8dp"
        android:hint="@string/password_again"
        android:textColorHint="@color/login_form_details"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_sign_up_page_right"
        app:layout_constraintStart_toStartOf="@id/guideline_sign_up_page_left"
        app:layout_constraintTop_toBottomOf="@+id/editText_sign_up_password" />

<Button
    android:id="@+id/button_sign_up"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="@string/sign_up"
    android:textAllCaps="false"
    android:textColor="@color/login_form_details_medium"
    android:background="@drawable/login_button_background"
    app:layout_constraintEnd_toStartOf="@+id/guideline_sign_up_page_right"
    app:layout_constraintStart_toStartOf="@+id/guideline_sign_up_page_left"
    app:layout_constraintTop_toBottomOf="@id/editText_sign_up_password_again" />
</androidx.constraintlayout.widget.ConstraintLayout>